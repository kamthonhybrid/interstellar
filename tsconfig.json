{
  "compilerOptions": {
      "target": "ES2015",    
      "module": "ESNext",
    "lib": [
      "es6"
    ],
    "outDir": "build",
    "allowJs": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "ts-node": {
      // Tell ts-node CLI to install the --loader automatically
      "esm": true
  },
  "exclude": [
    "node_modules"
  ]
}
